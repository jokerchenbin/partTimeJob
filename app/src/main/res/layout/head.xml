<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="200dp"></com.daimajia.slider.library.SliderLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/head_01"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/paidan"
                android:gravity="center"
                android:text="拍单" />

            <TextView
                android:id="@+id/head_02"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/cuxiao"
                android:gravity="center"
                android:text="促销" />

            <TextView
                android:id="@+id/head_03"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/liyi"
                android:gravity="center"
                android:text="礼仪" />

            <TextView
                android:id="@+id/head_04"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/jiajiao"
                android:gravity="center"
                android:text="家教" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/head_05"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/fuwuyuan"
                android:gravity="center"
                android:text="服务员" />

            <TextView
                android:id="@+id/head_06"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/huawuyuan"
                android:gravity="center"
                android:text="话务员" />

            <TextView
                android:id="@+id/head_07"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/shixisheng"
                android:gravity="center"
                android:text="实习" />

            <TextView
                android:id="@+id/head_08"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/gengduo"
                android:gravity="center"
                android:text="更多" />

        </LinearLayout>

    </LinearLayout>

    <View style="@style/line_heng" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f8f8f8" />
    <View style="@style/line_heng" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="热门岗位"
            android:drawableLeft="@mipmap/heisu"
            android:drawablePadding="@dimen/activity_8"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <View style="@style/line_heng" />
</LinearLayout>