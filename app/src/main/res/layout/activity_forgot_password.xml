<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.longjoy.parttimejob.activity.ForgotPasswordActivity">

    <include layout="@layout/top_bar_common" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_bg"
                android:gravity="center"
                android:text="您的手机号"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/activity_forgot_password_tele"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_8"
                android:layout_weight="3"
                android:background="@drawable/edittext_bg"
                android:paddingLeft="8dp"
                android:textCursorDrawable="@drawable/cursor_bg" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_bg"
                android:gravity="center"
                android:text="手机验证码"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_8"
                android:layout_weight="3">

                <EditText
                    android:id="@+id/activity_forgot_password_code"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@drawable/edittext_bg"
                    android:paddingLeft="8dp"
                    android:textCursorDrawable="@drawable/cursor_bg" />

                <Button
                    android:id="@+id/activity_forgot_password_btn_verification"
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/activity_8"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_bg"
                    android:text="获取验证码"
                    android:textColor="@color/main_color"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_bg"
                android:gravity="center"
                android:text="您的新密码"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/activity_forgot_password_newPwd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_8"
                android:layout_weight="3"
                android:inputType="textPassword"
                android:background="@drawable/edittext_bg"
                android:paddingLeft="8dp"
                android:textCursorDrawable="@drawable/cursor_bg" />

        </LinearLayout>

        <Button
            android:id="@+id/activity_forgot_password_btn_modify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/btn_bg"
            android:text="修 改 密 码"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>
